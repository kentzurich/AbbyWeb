@model IEnumerable<BulkyBook.Models.ProductModel>

<div class="row pb-3">
    @if(Model.Count().Equals(0))
    {
        <h1>No product available.</h1>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1">

                        <div class="card bg-light mb-3" style="max-width: 20rem;">
                            <div class="card-body">
                                <img src="@product.ImageUrl" class="card-img-top rounded" />
                                <div class="pl-1">
                                    <p class="card-title h5 text-primary">@product.Title</p>
                                    <p class="card-title text-info">by @product.Author</p>
                                </div>
                                <div class="pl-1">
                                    <p>List Price: <strike><b>$@product.ListPrice.ToString("#,0.00")</b></strike></p>
                                </div>
                                <div class="pl-1">
                                    <p>As low as: <b>$@product.Price_100.ToString("#,0.00")</b></p>
                                </div>
                            </div>

                            <div>
                                <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary form-control">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    
</div>
