@page
@model AbbyWeb.Pages.Categories.CreateModel



<form method="post" class="d-flex justify-content-center">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="category.Name"></label>
            <input asp-for="category.Name" placeholder="Enter Name" class="form-control">
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="category.DisplayOrder"></label>
            <input asp-for="category.DisplayOrder" placeholder="Enter Display Order" class="form-control">
            <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width:150px;">
            <i class="bi bi-plus-circle"></i> &nbsp;Create
        </button>
        <a asp-page="/Categories/Index" class="btn btn-secondary" style="width:150px;">
            <i class="bi bi-backspace"></i> &nbsp;Back
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}