@page
@model AbbyWeb.Pages.Categories.DeleteModel

<form method="post" class="d-flex justify-content-center">
    <input asp-for="category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="category.Name"></label>
            <input asp-for="category.Name" class="form-control" disabled>
        </div>

        <div class="mb-3">
            <label asp-for="category.DisplayOrder"></label>
            <input asp-for="category.DisplayOrder" class="form-control" disabled>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width:150px;">
            <i class="bi bi-trash"></i> &nbsp;Delete
        </button>
        <a asp-page="/Categories/Index" class="btn btn-secondary" style="width:150px;">
            <i class="bi bi-backspace"></i> &nbsp;Back
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}